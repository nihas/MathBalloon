<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:id="@+id/rl_main"
    >
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/balloon1"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"

                android:src="@drawable/baloon"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/balloon12"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/baloon"

              />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/relative2"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/balloon2"

            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/baloon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/relative2"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/balloon21"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/baloon"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="45dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/relative3"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/balloon3"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/baloon"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/relative3"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/balloon31"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"

                android:src="@drawable/baloon"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>